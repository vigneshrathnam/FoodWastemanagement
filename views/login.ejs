<div class="card card-body text-center">
    <h2 class="text-center"><i class="fa fa-sign-in"></i> Login 
    </h2>
    <%if(error_msg!=""){%>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">            <button type="button" class="close" data-dismiss="alert" aria-label="Close">              <span aria-hidden="true">&times;</span>   </button>                                     <%=error_msg%>                            </div>
    <%}%>
    
    <%if(success_msg!=""){%>                    
        <div class="alert alert-success alert-dismissible fade show" role="alert">            <button type="button" class="close" data-dismiss="alert" aria-label="Close">              <span aria-hidden="true">&times;</span>   </button>                                   <%=success_msg%>                            </div>
    <%}%>
    
    <%if(error!=""){%>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">            <button type="button" class="close" data-dismiss="alert" aria-label="Close">              <span aria-hidden="true">&times;</span>   </button>                                   <%=error%>                            </div>
    <%}%>
    
    
    <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Enter Email"
              />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Enter Password"
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
          </form>
          <p class="lead mt-4">                                             Forgot your Password? <a href="/forgotpass">Click here</a>       </p>
          <p class="lead mt-2">
            Don't have an Account? <a href="/register">Register</a>
          </p>
    </div>
    